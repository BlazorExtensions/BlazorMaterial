@using Microsoft.AspNetCore.Blazor.Components;
@inherits BlazorMaterialComponent

<span class=@( $"mdc-list-item__text {Class}" )>
    @PrimaryText
    @if (!string.IsNullOrWhiteSpace(SecondaryText))
    {
        <span class="mdc-list-item__secondary-text">@SecondaryText</span>
    }
</span>

@functions{
    [Parameter]
    private string PrimaryText { get; set; }
    [Parameter]
    private string SecondaryText { get; set; }
}
